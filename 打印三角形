#define _CRT_SECURE_NO_WARNINGS 1
#include<stdio.h>
#include <stdlib.h>
int main()
{
	int i, j;
	for (i = 1; i <= 6; i++)
	{
		for (j = 1; j <= 2 * i - 1; j++)
			printf("*");
		printf("\n");         //注意打印完换行
	}
	for (i = 5; i >= 1; i--)
	{
		for (j = 1; j <= 2 * i - 1; j++)
			printf("*");
		printf("\n");
	}
	return 0;
	system("pause");
}
