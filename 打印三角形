#define _CRT_SECURE_NO_WARNINGS 1
#include<stdio.h>
#include <stdlib.h>
int main()
{
	int i, j;
	for (i = 1; i <= 6; i++)
	{
		for (j = 1; j <= 2 * i - 1; j++)
			printf("*");
		printf("\n");         //注意打印完换行
	}
	for (i = 5; i >= 1; i--)
	{
		for (j = 1; j <= 2 * i - 1; j++)
			printf("*");
		printf("\n");
	}
	system("pause"); 	//暂停应放在return之前！
	return 0;
	//system("pause");
}



//思路:把图形分成上下两个三角形打印， 有无更好？
